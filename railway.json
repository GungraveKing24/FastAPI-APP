{
    "services": [
        {
            "name": "backend",
            "env": "python",
            "buildCommand": "pip install -r requirements.txt",
            "startCommand": "uvicorn main:app --host 0.0.0.0 --port $PORT"
        },
        {
            "name": "frontend",
            "env": "node",
            "buildCommand": "npm install && npm run build",
            "startCommand": "npx serve -s dist",
            "rootDirectory": "frontend"
        }
    ]
}
